{
  "name": "create-windowless-app-template",
  "version": "0.1.0",
  "private": true,
  "main": "_build/index.js",
  "dependencies": {
    "node-notifier": "10.0.1",
    "winston": "3.8.2"
  },
  "devDependencies": {
    "@tsconfig/node12": "1.0.11",
    "@types/cross-spawn": "6.0.2",
    "@types/jest": "29.4.0",
    "@types/node": "18.14.4",
    "@types/node-notifier": "8.0.2",
    "@types/winston": "2.4.4",
    "copy-webpack-plugin": "11.0.0",
    "cross-spawn": "7.0.3",
    "fs-extra": "11.1.0",
    "husky": "8.0.3",
    "jest": "29.4.3",
    "nexe": "4.0.0-rc.2",
    "rimraf": "4.2.0",
    "ts-loader": "9.4.2",
    "ts-node": "10.9.1",
    "typescript": "4.9.5",
    "webpack": "5.75.0",
    "webpack-cli": "5.0.1"
  },
  "scripts": {
    "start": "ts-node src/index.ts",
    "type-check": "tsc --build tsconfig.json",
    "prewebpack": "rimraf build && rimraf dist",
    "webpack": "webpack",
    "nexe": "nexe -t windows-x64-14.15.3 -o dist/create-windowless-app-template.exe",
    "build": "npm run type-check && npm run webpack && npm run nexe",
    "check-msbuild": "ts-node -e \"require(\"\"./launcher/launcherCompiler\"\").checkMsbuildInPath(true)\"",
    "rebuild-launcher": "msbuild launcher/launcher.csproj",
	"prepare": "npm run husky-install && npx fix-lockfile-integrity package-lock.json",
	"husky-install": "git config --get core.hookspath || husky install",
    "pre-commit": "git diff HEAD --exit-code --stat launcher/* || npm run check-msbuild && npm run rebuild-launcher && git add resources/bin/create-windowless-app-template-launcher.exe"
  }
}
